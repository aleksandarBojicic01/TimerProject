@model List<Customer>

<div class="row my-5">
    <div class="col-6">
        <h2>Customer List</h2>
    </div>
    <div class="col-6 text-end" style="padding-top: 1rem">
        <a asp-controller="Customer" asp-action="Create" class="btn btn-primary "><i class="bi bi-plus-square"></i> &nbsp; New Customer</a>
    </div>
</div>

<table id="tblCustomers" class="table table-striped table-bordered" style="width: 100%;">
    <thead>
        <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Address</th>
            <th>City</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>

@section Scripts {
    <script src="~/js/customer.js"></script>
}
