@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Microsoft.AspNetCore.Identity.IdentityUser>

<div class="row my-5">
    <div class="col-6">
        <h2>User List</h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Register A New User</a>
    </div>
</div>

<table id="tblUsers" class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Username</th>
        <th>Email</th>
    </tr>
    </thead>
</table>

@section Scripts {
    <script src="~/js/user.js"></script>
}