@model List<Category>

<div class="row my-5">
    <div class="col-6">
        <h2>Category List</h2>
    </div>
    <div class="col-6 text-end" style="padding-top: 1rem">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary "><i class="bi bi-plus-square"></i> &nbsp; New Category</a>
    </div>
</div>

<table id="tblCategories" class="table table-striped table-bordered" style="width: 100%;">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Billable</th>
        <th>Active</th>
        <th>VAT</th>
        <th>Actions</th>
    </tr>
    </thead>
</table>

@section Scripts {
    <script src="~/js/category.js"></script>
}